{
  "name": "mandelbrot-build",
  "version": "1.0.0",
  "description": "Build process for Mandelbrot explorer",
  "private": true,
  "scripts": {
    "build": "./build/build.sh",
    "test": "npm run test:unit && npm run test:integration",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "dotenv -e .env.local -- jest tests/integration --maxWorkers=${TEST_WORKERS:-2}",
    "test:integration:fast": "dotenv -e .env.local -- jest tests/integration --maxWorkers=3",
    "test:stress": "jest --testMatch='**/tests/**/*.stress.js' --verbose",
    "test:coverage": "node tests/scripts/run-coverage.js",
    "test:coverage:integration": "COLLECT_COVERAGE=1 jest tests/integration --runInBand --globalSetup ./tests/global-setup.js --globalTeardown ./tests/global-teardown.js && nyc report --reporter=html --reporter=text",
    "bench": "jest --testMatch='**/tests/**/*.bench.js' --verbose",
    "callgraph": "node build/build-callgraph.js"
  },
  "jest": {
    "testEnvironment": "node",
    "maxWorkers": 3,
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "dotenv-cli": "^11.0.0",
    "jest": "^29.7.0",
    "monocart-coverage-reports": "^2.12.9",
    "mp4-muxer": "^5.2.2",
    "nyc": "^17.1.0",
    "puppeteer": "^24.32.0",
    "v8-to-istanbul": "^9.3.0"
  }
}
