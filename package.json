{
  "name": "mandelbrot-build",
  "version": "1.0.0",
  "description": "Build process for Mandelbrot explorer",
  "private": true,
  "scripts": {
    "build": "./build/build.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:stress": "jest --testMatch='**/tests/**/*.stress.js' --verbose",
    "test:coverage": "COLLECT_COVERAGE=1 jest tests/integration --runInBand --globalSetup ./tests/global-setup.js --globalTeardown ./tests/global-teardown.js && nyc report --extension=.html --reporter=html --reporter=text",
    "bench": "jest --testMatch='**/tests/**/*.bench.js' --verbose"
  },
  "jest": {
    "testEnvironment": "node",
    "maxWorkers": 5,
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "jest": "^29.7.0",
    "mp4-muxer": "^5.1.3",
    "nyc": "^17.1.0",
    "puppeteer": "^21.6.0",
    "v8-to-istanbul": "^9.3.0"
  }
}
