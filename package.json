{
  "name": "mandelbrot-build",
  "version": "1.0.0",
  "description": "Build process for Mandelbrot explorer",
  "private": true,
  "scripts": {
    "build": "./build/build.sh",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "tests/**/*.js",
      "!tests/**/*.test.js"
    ]
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "mp4-muxer": "^5.1.3",
    "jest": "^29.7.0",
    "puppeteer": "^21.6.0"
  }
}
